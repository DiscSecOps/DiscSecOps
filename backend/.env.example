# Environment Configuration
# SECURITY WARNING: Never commit this file with real secrets to git!
# Copy this file to .env and update with your actual values

# =============================================================================
# Database Configuration
# =============================================================================
# For local Docker:
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5433/app_db

# For production/Neon:
# DATABASE_URL=postgresql+asyncpg://user:password@your-neon-host/dbname?sslmode=require

# =============================================================================
# Security (REQUIRED)
# =============================================================================
# Generate these locally using: openssl rand -hex 32
# Or PowerShell: [System.Convert]::ToBase64String([System.Security.Cryptography.RandomNumberGenerator]::GetBytes(32))
SECRET_KEY=replace-this-with-a-secure-random-string
SESSION_SECRET_KEY=replace-this-with-another-secure-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
SESSION_EXPIRE_MINUTES=1440

# =============================================================================
# API Settings
# =============================================================================
PROJECT_NAME="DevSecOps Social App"
VERSION=0.1.0
API_V1_STR=/api/v1

# =============================================================================
# CORS (Cross-Origin Resource Sharing)
# =============================================================================
# Add your frontend URL here to allow requests
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
# Note: Use BACKEND_CORS_ORIGINS or ALLOWED_ORIGINS (both work)
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000","http://localhost:4173"]

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=development
DEBUG=true
